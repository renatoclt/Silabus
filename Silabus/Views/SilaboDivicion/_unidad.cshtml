

@model Silabus.Models.SilaboDivisiones
<!DOCTYPE html>
@if (Model.Divisiones.Estado == 1)
{
    <table class="tablaBorderUnidad">
        <thead>
            <tr>
                <th class="tituloRow">Unidades</th>
                <th class="tituloRow">Sub-Unidades</th>
                <th class="tituloRow">Descripción</th>
                <th class="tituloRow">Fases</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var unidad in Model.Silabos.Asignaturas.Unidads)
            {
            <tr>
                <td></td>
                <td></td>
                <td>@unidad.Nombre</td>
                <td></td>
            </tr>
            }
        </tbody>
    </table>
}
else
{
    <table class="tablaBorderUnidad">
        <thead>
            <tr>
                <th class="tituloRow">Unidades</th>
                <th class="tituloRow">Sub-Unidades</th>
                <th class="tituloRow">Descripción</th>
                <th class="tituloRow">Fases</th>
                <th class="tituloRow">Acción</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var unidad in Model.Silabos.Asignaturas.Unidads)
            {
            <tr>
                <td>id</td>
                <td>subId</td>
                <td>@unidad.Nombre</td>
                <td><select>
                @foreach (var fase in Model.Silabos.Asignaturas.Fases)
                {
                    <option>@fase.Nombre</option>
                }
                </select></td>
                <td>
                    <button type="button" class="btn btn-default btn-sm" onclick="location.href='@Url.Action("Unidades", "Silabos",new { accion = 1 })'" )'">
                        <span class="glyphicon glyphicon-hand-up"></span>
                    </button>
                    <button type="button" class="btn btn-default btn-sm" onclick="UnidadDown()">
                        <span class="glyphicon glyphicon-hand-down"></span>
                    </button>
                    <button type="button" class="btn btn-default btn-sm" onclick="UnidadTrash()">
                        <span class="glyphicon glyphicon-trash"></span>
                    </button>

                </td>
            </tr>
            }
        </tbody>
    </table>
}
