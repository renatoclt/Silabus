@model Silabus.Models.SilaboDivisiones
@if (Model.Divisiones.Estado == 1)
{
    foreach (var fase in Model.Silabos.SilaboFases)
    {
        <div class="row text-center">
            @Html.DisplayName(fase.Fases.Nombre)
        </div>
        <div class="row">
            @Html.LabelFor(model => model.Silabos.SilaboFases.Where(f => f.IdFases == fase.Id).First().Titulo, new { @class = "control-label col-md-2" })
            @Html.DisplayName(fase.Titulo)
        </div>
    }

    foreach (var fase in Model.Silabos.SilaboFases)
    {
        <div class="row text-center">
            @Html.DisplayName(fase.Fases.Nombre)
        </div>
        foreach (var saber in fase.Saberes)
        {
            <div class="row" style="padding-left:20px;">
                @Html.DisplayName(saber.Nombre)
                @Html.DisplayFor(model => model.Silabos.SilaboFases.Where(f => f.IdFases == fase.Id).First().SilaboFasesSaberes.FirstOrDefault(s => s.IdSaberes == saber.Id).Descripcion)
            </div>
        }
    }

}
else
{
    foreach (var fase in Model.Silabos.SilaboFases)
    {
        <div>
            <label>@Html.DisplayName(fase.Fases.Nombre)</label>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Silabos.SilaboFases.Where(f => f.IdFases == fase.Id).First().Titulo, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Silabos.SilaboFases.Where(f => f.IdFases == fase.Id).First().Titulo)
                @Html.ValidationMessageFor(model => model.Silabos.SilaboFases.Where(f => f.IdFases == fase.Id).First().Titulo)
            </div>
        </div>
    }

    foreach (var fase in Model.Silabos.SilaboFases)
    {
        <div class="row text-center">
            @Html.DisplayName(fase.Fases.Nombre)
        </div>
        foreach (var saber in fase.Saberes)
        {
        <div class="form-group">
            <span class="control-label col-md-2"> @Html.DisplayName(saber.Nombre)</span>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Silabos.SilaboFases.Where(f => f.IdFases == fase.Id).First().SilaboFasesSaberes.FirstOrDefault(s => s.IdSaberes == saber.Id).Descripcion)
                @Html.ValidationMessageFor(model => model.Silabos.SilaboFases.Where(f => f.IdFases == fase.Id).First().SilaboFasesSaberes.FirstOrDefault(s => s.IdSaberes == saber.Id).Descripcion)
            </div>
        </div>
        }

    }

}
